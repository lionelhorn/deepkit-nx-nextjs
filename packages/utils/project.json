{
  "name": "utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/utils",
        "main": "packages/utils/src/index.ts",
        "tsConfig": "packages/utils/tsconfig.lib.json",
        "assets": [
          "packages/utils/*.md"
        ]
      }
    },
    "test:ui": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/utils",
        "command": "vitest --ui"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "env": {
        "DEBUG": "deepkit"
      },
      "options": {
        "cwd": "packages/utils",
        "command": "vitest --run"
      }
    }
  },
  "tags": []
}
